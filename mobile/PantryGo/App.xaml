<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:PantryGo.Helpers"
             x:Class="PantryGo.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <helpers:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <helpers:IntToBoolInverterConverter x:Key="IntToBoolInverter"/>
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <helpers:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <helpers:GuidToShortStringConverter x:Key="GuidToShortStringConverter"/>
            <helpers:BoolToPaymentStatusConverter x:Key="BoolToPaymentStatusConverter"/>
            
            <!-- Additional Colors -->
            <Color x:Key="Background">#F8F9FA</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
