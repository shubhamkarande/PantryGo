<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PantryGo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PantryGo.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Login (standalone, no tabs) -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.TabBarIsVisible="False"
        Shell.NavBarIsVisible="False"/>

    <!-- Main Tabs -->
    <TabBar Route="main">
        
        <ShellContent
            Route="home"
            Title="Home"
            Icon="{OnPlatform Android='home.png', Default='home.png'}"
            ContentTemplate="{DataTemplate views:HomePage}"/>
        
        <ShellContent
            Route="cart"
            Title="Cart"
            Icon="{OnPlatform Android='cart.png', Default='cart.png'}"
            ContentTemplate="{DataTemplate views:CartPage}"/>
        
        <ShellContent
            Route="orders"
            Title="Orders"
            Icon="{OnPlatform Android='orders.png', Default='orders.png'}"
            ContentTemplate="{DataTemplate views:OrderListPage}"/>
        
        <ShellContent
            Route="profile"
            Title="Profile"
            Icon="{OnPlatform Android='profile.png', Default='profile.png'}"
            ContentTemplate="{DataTemplate views:ProfilePage}"/>
            
    </TabBar>

</Shell>
